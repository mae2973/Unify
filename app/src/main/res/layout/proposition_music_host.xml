<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:aandroid="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="75dp">


        <ImageView
            android:id="@+id/rv_image_s_h"
            aandroid:layout_width="49dp"
            android:layout_height="49dp"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            app:srcCompat="@drawable/icone"  android:layout_width="49dp"/>

        <TextView
            android:id="@+id/ini_s_h"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="29dp"
            android:textStyle="bold"
            android:text="P"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="10dp" />


        <TextView
            android:id="@+id/titre_s_h"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Titre"
            android:textColor="@color/white"
            android:layout_toRightOf="@+id/rv_image_s_h"
            android:layout_marginLeft="21dp"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/auteur_s_h"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AC/DC"
            android:textStyle="bold"
            android:layout_below="@+id/titre_s_h"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="2dp"
            android:textColor="@color/white"
            />

        <ImageButton
            android:id="@+id/validerSuggestion"
            android:layout_width="70dp"
            android:layout_height="65dp"
            android:layout_marginLeft="115dp"
            android:layout_marginTop="0dp"
            android:layout_toRightOf="@+id/titre_s_h"
            android:contentDescription="Accepter"
            android:background="@drawable/valid_sugg"/>

        <ImageButton
            android:id="@+id/refuserSuggestion"
            android:layout_width="70dp"
            android:layout_height="65dp"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/validerSuggestion"
            android:layout_weight="1"
            android:background="@drawable/refus_sugg"
            android:contentDescription="Refuser" />

    </RelativeLayout>




</LinearLayout>