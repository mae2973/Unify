<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".MainActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/Theme.Unify.AppBarOverlay">

    </android.support.design.widget.AppBarLayout>


    <include
        android:id="@+id/include"
        layout="@layout/content_main"
        app:layout_anchor="@+id/include"
        app:layout_anchorGravity="center" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="77dp"
        android:layout_height="74dp"
        app:srcCompat="@drawable/logo_1"
        android:layout_marginTop="650dp"
        android:layout_marginLeft="10dp"
       />

    <ImageButton
        android:id="@+id/creer"
        android:layout_width="170dp"
        android:layout_height="75dp"
        android:background="@drawable/bouton_creer"
        app:srcCompat="@drawable/bouton_creer"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="260dp"

        />

    <ImageButton
        android:id="@+id/rejoindre"
        android:layout_width="170dp"
        android:layout_height="75dp"
        android:background="@drawable/bouton_rejoindre"
        app:srcCompat="@drawable/bouton_rejoindre"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="400dp"

        />

    <ImageButton
        android:id="@+id/imageButton4"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/parametres"
        android:layout_marginLeft="340dp"
        android:layout_marginTop="20dp"

        />

    <TextView
        android:id="@+id/b_creer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CRÃ‰ER"
        app:layout_anchor="@+id/creer"
        app:layout_anchorGravity="center"
        android:textSize="25dp"
        android:textColor="@color/white"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/b_rejoindre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="REJOINDRE"
        android:textColor="@color/white"
        android:textSize="25dp"
        app:layout_anchor="@+id/rejoindre"
        app:layout_anchorGravity="center"
        android:textStyle="bold"/>


</android.support.design.widget.CoordinatorLayout>