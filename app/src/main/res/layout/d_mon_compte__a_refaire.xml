<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".MainActivity">

    <include
        android:id="@+id/include"
        layout="@layout/content_main"
        app:layout_anchor="@+id/include"
        app:layout_anchorGravity="center" />
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/logo"
        android:layout_width="77dp"
        android:layout_height="60dp"
        app:layout_anchor="@+id/logo"
        app:srcCompat="@drawable/logo_1"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="641dp"
        tools:ignore="NotSibling" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="300dp"
        android:layout_height="540dp"
        android:layout_marginTop="80dp"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/gradient2" />

    <Button
        android:id="@+id/buttonRetour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Retour"
        android:background="@android:color/transparent"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:layout_marginLeft="300dp"
        android:layout_marginTop="650dp"
        />

    <TextView
        android:id="@+id/mon_compte"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="115dp"
        android:layout_marginTop="110dp"
        android:text="Mon compte"
        android:textColor="@color/white"
        android:textSize="30dp"
        android:textStyle="bold"
 />

    <TextView
        android:id="@+id/nom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Coutant"
        android:textSize="22dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="180dp"
        />

    <TextView
        android:id="@+id/prenom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Klaimant"
        android:textSize="22dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_marginLeft="230dp"
        android:layout_marginTop="180dp"
        />

    <TextView
        android:id="@+id/identifiant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="coucou"
        android:textSize="22dp"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="240dp"
        />


    <TextView
        android:id="@+id/mail"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="super_parlement@budapest.com"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="22dp"
        android:textStyle="bold"
        android:layout_marginLeft="55dp"
        android:layout_marginTop="300dp"/>

    <Button
        android:id="@+id/modif_mdp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Changer le mot de passe"
        android:layout_gravity="center_horizontal"
        android:textSize="19dp"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:background="@android:color/transparent"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="400dp"
        />

    <Button
        android:id="@+id/modif_compte"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Modifier"
        android:layout_gravity="center_horizontal"
        android:textSize="19dp"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:background="@android:color/transparent"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="470dp"
        />

    <ImageButton
        android:id="@+id/imageButton3"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/parametres"
        android:layout_marginLeft="345dp"
        android:layout_marginTop="15dp" />

</RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>