<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/Theme.Unify.AppBarOverlay">

    </android.support.design.widget.AppBarLayout>


    <include
        android:id="@+id/include"
        layout="@layout/content_main"
        app:layout_anchor="@+id/include"
        app:layout_anchorGravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        tools:layout_editor_absoluteX="100dp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="77dp"
        android:layout_height="74dp"
        app:srcCompat="@drawable/logo_1"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="641dp" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="300dp"
        android:layout_height="380dp"
        android:layout_gravity="center_horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5"
        app:srcCompat="@drawable/gradient3" />

    <TextView
        android:id="@+id/creer_compte"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rejoindre un salon"
        android:textColor="@color/white"
        android:textSize="25dp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="81dp"
        tools:layout_editor_absoluteY="215dp" />

    <EditText
        android:id="@+id/editTextTextPersonName4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:ems="6"
        android:inputType="textPersonName"
        android:text="Code salon"
        android:textColor="@color/white"
        tools:layout_editor_absoluteX="93dp"
        tools:layout_editor_absoluteY="296dp" />

    <Button
        android:id="@+id/button_validation"
        android:layout_width="80dp"
        android:layout_height="35dp"
        android:background="@drawable/bouton_valid"
        android:text="OK"
        android:textColor="@color/white"
        tools:layout_editor_absoluteX="237dp"
        tools:layout_editor_absoluteY="306dp" />

    <Button
        android:id="@+id/annuler"
        android:layout_width="80dp"
        android:layout_height="35dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/bouton_annuler"
        android:text="Annuler"
        android:textColor="@color/white"
        tools:layout_editor_absoluteX="165dp"
        tools:layout_editor_absoluteY="482dp" />

    <Button
        android:id="@+id/modif_mdp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background=""
        android:text="Scanner le QR code "
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="18dp"
        tools:layout_editor_absoluteX="129dp"
        tools:layout_editor_absoluteY="386dp" />


</android.support.constraint.ConstraintLayout>